<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <ul class="nav nav-pills nav-justified">
      <li role="presentation"><%= link_to "profile", user_path(@user) %></li>
      <li role="presentation"><%= link_to "Following", followings_user_path(@user) %></li>
      <li role="presentation" class="active"><%= link_to "Follower", followers_user_path(@user) %></li>
    </ul>
    <% if @user.follower_users.any? %>
      <h3>Follower User (<%= @user.follower_users.count %>)</h3>
        <ol class="follow">
        <% @followers.each do |follower| %>
            <li>
                <span class="user"><%= follower.name %></sapn>
                <span class="user"><%= follower.email %></span>
            </li>
        <% end %>
        </ol>
    <% end %>
  </div>
</div>