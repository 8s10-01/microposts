<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.following_users.any? %>
      <h3>Follower User (<%= @user.following_users.count %>)</h3>
        <ol class="follow">
        <% @followings.each do |following| %>
            <li>
                <span class="user"><%= following.name %></sapn>
                <span class="user"><%= following.email %></span>
            </li>
        <% end %>
        </ol>
    <% end %>
  </div>
</div>