<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <ul class="nav nav-pills nav-justified">
      <li role="presentation" class="active"><%= link_to "profile", user_path(@user) %></li>
      <li role="presentation"><%= link_to "Following", followings_user_path(@user) %></li>
      <li role="presentation"><%= link_to "Follower", followers_user_path(@user) %></li>
    </ul>
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>
